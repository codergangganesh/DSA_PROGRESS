class Solution {
    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> pre = new ArrayList<>();
        while (root!=null){
            if (root.left==null){
                pre.add(root.val);
                root = root.right;

            }
            else{
                TreeNode x = root.left;
                while(x.right!=null && x.right!=root) x = x.right;
                if (x.right==null){
                    pre.add(root.val);
                    x.right = root;
                    root = root.left;
                }
                else{
                    x.right = null;
                    root = root.right;
                }
            }
        }
        return pre;
    }
}