class Solution {
    public int maxDepth(TreeNode root) {
        if (root==null) return 0;
        int l = maxDepth(root.left);
        if (l==-1) return -1;
        int r = maxDepth(root.right);
        if (r==-1) return -1;
        if (Math.abs(l-r)>1) return -1;
        return Math.max(l,r)+1;
    }
    public boolean isBalanced(TreeNode root) {
        int h = maxDepth(root);
        if (h==-1) return false;
        else return true;
    }
}