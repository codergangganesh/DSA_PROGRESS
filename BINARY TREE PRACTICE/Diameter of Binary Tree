class Solution {
    int ans = 0;
    public int hei(TreeNode root) {
        if (root==null) return 0;
        int l = hei(root.left);
        int r = hei(root.right);
        ans = Math.max(ans,l+r);
        return Math.max(l,r)+1;
    }
    public int diameterOfBinaryTree(TreeNode root) {
        hei(root);
        return ans;
    }
}