// User function Template for Java

class Solution {
    static int solve(int bt[]) {
        // code here
        int tot = 0;
        int wat = 0;
        int n = bt.length;
        Arrays.sort(bt);
        for (int i =0;i<n;i++){
            wat+=tot;
            tot+=bt[i];
            
        }
        return wat/n;
    }
}